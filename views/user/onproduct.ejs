<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>MR Ecommerce Site</title>
<link href='https://fonts.googleapis.com/css?family=Oswald:700' rel='stylesheet' type='text/css'>
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/css/bootstrap.css'><link rel="stylesheet" href="./style.css">
<link rel="stylesheet" href="/user/css/usertem.css">

</head>
<body>
<!-- partial:index.partial.html -->
<body style="background: #FDFBD0">
  <div class="container">
    <%- include('./header.ejs') %>    

<div class="container-fluid">
 <div class="row onpr">
    <div class="col-md-5">          
           <img src="/productimage/<%= data.productlimg %>" style="width:60%; height:50%"><br/><br/>
           <img src="/productimage/<%= data.productlimg %>" class="onprimg">           
           <img src="/productimage/<%= data.productmimg %>" class="onprimg">
           <img src="/productimage/<%= data.productsimg %>" class="onprimg">
           <img src="/productimage/<%= data.productmimg %>" class="onprimg">
    </div>

    <div class="col-md-7">
        <div class=""><h3><%= data.productname %></h3></div>
      <form action="/addtocardpost" method="post">
        <div class="" style="display: flex; font-size: 20px">
          <span>Price : <%= data.productprice %></span>        
          <span>&nbsp;  &nbsp; Total Price :</span> &nbsp;  &nbsp; 
          <span id="total"><%= data.productprice %></span>
        </div>

        <div class="" style="display: flex; font-size: 20px">          
          <span> Quantity :&nbsp;  &nbsp; </span>
          <input type="number" value="1" id="quantity" name="quantity" onchange="myFunction(this)" 
            price="<%= data.productprice %>">
            <input type="hidden" id="custId" name="custId" value="<%= data._id %>">
            <input type="hidden" id="totale" value="<%= data.productprice %>" name="totalprice">
        </div>

        <div class="text-info description"><%= data.productdescription %></div>
        <button class="btn btn-lg text-warning" style="background: #2abbe8; margin-top: 20px">
          Buy Now
        </button>
          
        <input type="submit" class="btn btn-lg text-light" style="background: 
          #f57224; margin-top: 20px" value="Add to Card">
      </form>
    </div>
</div>

 

           
</div>

  </div>

<%- include('./fooder.ejs') %>


<script>
  
  function myFunction(e){
    const quantity = document.getElementById("quantity");    
    const price = e.getAttribute("price");        
    document.getElementById("total").innerHTML = price * quantity.value;
    document.getElementById("totale").value = price * quantity.value;
}
 
</script>




<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
</body>
<!-- partial -->
